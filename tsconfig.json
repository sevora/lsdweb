{
    "compilerOptions": {
      "target": "es2016",                            
      "module": "NodeNext",                             
      "moduleResolution": "NodeNext",                     
      "typeRoots": ["./types"],                                 
      "outDir": "./build",                                
      "esModuleInterop": true,                            
      "forceConsistentCasingInFileNames": true,           
      "strict": true,                                    
      "skipLibCheck": true                       
    },
    "ts-node": {
      "esm": true,
      "transpileOnly": true
    },
    "include": [
      "src",
      "environment.d.ts",
      "types/index.d.ts"  
    ]
  }